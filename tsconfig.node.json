{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"],
      "src/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["webextension-polyfill", "chrome"]
  },
  "include": ["package.json", "vite.config.ts", "manifest.config.ts"]
}
